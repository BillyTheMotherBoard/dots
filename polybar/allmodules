# Welcome to the Polybar-Shop ladies and gentlemen :p

# This file contains all modules I've harvesteds through the net, created by myself and have used 
# in my Polybar set up so any time I want to change something I come to the modules store here ^^


# bspwm workspaces control module using dots and little cross
[module/bspwm]
type = internal/bspwm

format = <label-state> <label-mode>

label-focused = x
label-focused-padding = 2

label-occupied = ·
label-occupied-padding = 2

label-urgent = ·
label-urgent-padding = 2

label-empty = ·
label-empty-padding = 2

# play the previous song in queue, cmus module
[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec cmus-remote -r -p
format-foreground = ${colors.cyan}
format-background = ${colors.modb1}
format-padding    = 1

# play next song in queue, always in cmus
[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec cmus-remote -n -p
format-foreground = ${colors.cyan}
format-background = ${colors.modb1}
format-padding    = 1

# cmus module to harvest infos about the playing song 
[module/cmusnp]
type              = custom/script
exec              = cmusnp.py
exec-if           = pgrep cmus > /dev/null
interval          = 0.01
click-left        = cmus-remote -u
click-right       = xdesktop -g 4
format-foreground = ${colors.foreground}
format-background = ${colors.modb1}
format-padding    = 1

# cmus module, the name speaks by itself
[module/playpause]
type              = custom/script
exec              = playpause.py
interval          = 0.01
click-left	  = cmus-remote -u
format-foreground = ${colors.cyan}
format-background = ${colors.modb1}
format-padding = 2

# CPU usage module (one of my favorites, always with me)
[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.magenta}
label = %percentage:2%%

# wlan module for interface wlp0s20f0u3 with mobile like signal ramp
[module/wlan]
type = internal/network
interface = wlp0s20f0u3
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%

format-disconnected = <label-disconnected>
label-disconnected = " [NO WIFI]"
label-disconnected-foreground = ${colors.red}

ramp-signal-0 = "   "
ramp-signal-1 = "   "
ramp-signal-2 = "   "
ramp-signal-3 = "   "
ramp-signal-4 = "   "
ramp-signal-foreground = ${colors.green}

# memory usage (in percent) module
[module/memory]
type = internal/memory
interval = 2
format-prefix = "   "
format-prefix-foreground = ${colors.cyan}
label = %percentage_used%%

# Temperature module with thermo glyph ramp
[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.red}

ramp-0 = "  "
ramp-1 = "  "
ramp-2 = "  "
ramp-foreground = ${colors.green}

# Date module with a date info and time info all in one
[module/date]
type = internal/date

label = %{F#fb4934} %{F-} %date%  %{F#fb4934}%{F-} %time%

date = %Y-%m-%d

time = %H:%M:%S

interval = 1

# powermenu module with poweroff | reboot | logout possibilities displayed with a separator |
[module/powermenu]
type = custom/menu

label-open                 = 
label-open-foreground      = ${colors.red}
label-open-background      = ${colors.modb2}
label-open-padding         = 2
label-close                = ✕
label-close-padding        = 2
label-close-foreground     = $[colors.red]
label-separator            = |
label-separator-foreground = #666666

menu-0-0      = reboot
menu-0-0-exec = menu-open-1
menu-0-1      = poweroff
menu-0-1-exec = menu-open-2
menu-0-2      = logout
menu-0-2-exec = menu-open-3

menu-1-0      = ✕
menu-1-0-exec = menu-open-0
menu-1-1      = ✓
menu-1-1-exec = systemctl reboot

menu-2-0      = ✓
menu-2-0-exec = systemctl poweroff
menu-2-1      = ✕
menu-2-1-exec = menu-open-0

menu-3-0      = ✓
menu-3-0-exec = bspc quit
menu-3-1      = ✕
menu-3-1-exec = menu-open-0
